{
  "name": "react-ultimate-carousel",
  "version": "0.1.3",
  "description": "Introducing Ultimate Carousel, a utility-first carousel for React apps that prioritizes functionality over pre-packaged features.",
  "main": "dist/index.min.js",
  "files": [
    "dist/index.min.js",
    "lib"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --component",
    "watch": "watch 'npm run build' src",
    "build": "NODE_ENV=production ./node_modules/.bin/babel src/index.js --out-file dist/index.js && npm run minify-build && npm run minify-css",
    "minify-build": "./node_modules/.bin/minify dist/index.js --out-file dist/index.min.js  --mangle.keepClassName",
    "minify-css": "css-minify -f lib/styles/carousel.css -o lib/styles"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CallumEddisford/react-ultimate-carousel.git"
  },
  "bugs": {
    "url": "https://github.com/CallumEddisford/react-ultimate-carousel/issues"
  },
  "homepage": "https://callumeddisford.github.io/react-ultimate-carousel",
  "keywords": [
    "react",
    "carousel",
    "gallery",
    "slider",
    "slideshow",
    "presentation",
    "customizable",
    "lightweight",
    "browser-support"
  ],
  "author": "Callum Eddisford",
  "license": "ISC",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@cypress/react18": "^2.0.0",
    "babel-loader": "^9.1.2",
    "babel-minify": "^0.5.2",
    "css-loader": "^6.8.1",
    "css-minify": "^2.0.0",
    "cypress": "^12.14.0",
    "html-webpack-plugin": "^5.5.3",
    "postcss-loader": "^7.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "watch": "^1.0.2",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "intersection-observer": "^0.12.2"
  }
}

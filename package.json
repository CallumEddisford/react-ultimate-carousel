  },
  "homepage": "https://callumeddisford.github.io/react-ultimate-carousel",
  "keywords": [
    "react",
    "carousel",
    "gallery",
    "slider",
    "slideshow",
    "presentation",
    "customizable",
    "lightweight",
    "browser-support"
  ],
